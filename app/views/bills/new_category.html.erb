<div class="wrapper-category">
  <div class="container">
    <h1>Select a bill category for which you want to create a bid</h1>
    <div class="row">
      <% Category.all.each do |category| %>
      <div class="col-xs-12 col-md-6">
        <div class="card-wrapper">
          <%= link_to new_bill_path(Bill.new, category: category.name) do %>
          <div class="card"><h1><%= category.name %></h1></div>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

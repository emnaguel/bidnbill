<div class="wrapper-category">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="title-category">
            <h1>Sélectionnez une catégorie de facture :</h1>
        </div>

      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
        <% Category.all.each do |category| %>
          <div class="col-xs-12 col-md-6">
            <%= link_to new_bill_path(Bill.new, category: category.name) do %>
              <div class="card-category"><h1><%= category.name %></h1></div>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>
</div>

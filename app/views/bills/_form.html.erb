<%= simple_form_for(@bill) do |f| %>
  <div class="form-inputs">
    <%= f.association :category, label: "Please select a bill category", prompt: "Select a category", selected: @category&.id %>
    <%= f.input :current_provider, label: "Who is your current provider?", placeholder: 'Please click'  %>
    <%= f.input :address, label: "Please enter your billing address", placeholder: 'Please click'  %>
    <%= f.input :price, label: "How much do you pay per month?", placeholder: 'Please click' %>
    <%= f.input :photo, label: "Upload your bill here"%>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "button" %>
    <%= link_to( 'Back', dashboard_path, {class: "btn button back-button-link"} ) %>
  </div>
<% end %>

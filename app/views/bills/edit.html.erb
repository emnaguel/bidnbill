<div class="container">
  <div class="container-editing-bill">
    <div class="row">
      <div class="row-editing-bill-title" >
        <h1>Modification de votre facture</h1>
        <h2>(La modification des données de votre facture entraînera l'annulation de l'enchère qui y est associée)</h2>
      </div>
    </div>
    <div class="row">
      <div class="form-edit">
        <%= render 'form', bill: @bill %>
        <% if policy(@bill).show? %>
        <%= link_to 'Show', bill_path(@bill) %> |
        <%= link_to 'Back', dashboard_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>


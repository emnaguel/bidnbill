  <%= link_to 'Edit', edit_bill_path(@bill) %> |
  <%= link_to 'Back to dashboard', dashboard_path %>
  <% unless @bill.auction == nil %>
    | <%= link_to 'Back to auction', auction_path(@bill.auction) %>
  <% end %>
<% end %>



<div class="banner-content">
  <%= link_to root_path, class: "Landing-page-logo-colours" do %>
  <%= image_tag "Landing-page-logo-colours.png" %>
  <% end %>
  <h2>A three-step-bid to regain control of your bills</h2>
</div>
<div class="wrapper-landing-page">
  <div class="container">
    <div class="row">
      <div class="row-merged">
        <div class="col-xs-12 col-md-4">
          <div class="card-ui" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), asset-url('');">
          <%= link_to root_path, class: "card-icons invoice" do %>
          <%= image_tag "invoice.svg" %>
          <% end %>
            <div class="card-description">
              <h1>Pick a bill</h1>
              <p>Upload your last electicity/gas/smartPhone/Internet box, insurance bill...</p>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-4">
          <div class="card-ui" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), asset-url('');">
            <%= link_to root_path, class: "card-icons law" do %>
            <%= image_tag "law-good-size.svg" %>
            <% end %>
            <div class="card-description">
              <h1>Create a bid</h1>
              <p>The bid created allows you to submit directly and anonymously your consumption data to competitors</p>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-4">
        <div class="card-ui" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), asset-url('');">
          <%= link_to root_path, class: "card-icons eyeglasses" do %>
          <%= image_tag "eyeglasses.svg" %>
          <% end %>
          <div class="card-description">
            <h1>Check the results</h1>
            <p>Consult your bid's results and select the offer that best suits your needs</p>
          </div>
        </div>
      </div>
    </div>
  </div>
 <!--  <div class="call-to-action">
  <p> Bid it! <p>
  </div> -->
</div>



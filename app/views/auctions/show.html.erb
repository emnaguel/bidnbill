<h1>Auction created by <%= @auction.client.email%> for his <%= @auction.bill.category%> bill number <%= @auction.bill.id%></h1>

<%= link_to "Create a bid", new_auction_bid_path(@auction) %>

<% unless @auction.bids == nil %>
  <h2>Bids:</h2>
  <ul>
    <% @auction.bids.each do |bid| %>
      <li>
        <%= link_to "Bid status #{bid.status}", bid_path(bid) %> |
        <%= link_to "Select this bid", select_bid_path(bid) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= link_to "Bill number #{@auction.bill.id}", bill_path(@auction.bill) %> |
<%= link_to 'Destroy', auction_path(@auction), method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', bills_path %>

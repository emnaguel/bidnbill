<%= simple_form_for([conversation, message], remote: true) do |f| %>
  <div class="form-inputs">
    <%= f.input :content %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "button" %>
  </div>
<% end %>


<ul id="message-list">
  <% messages.order(created_at: :desc).each do |message| %>
    <%= render 'messages/message_item', message: message, messages: messages %>
  <% end %>
</ul>
